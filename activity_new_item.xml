<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:background="#E0E0E0"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">
        <android.support.design.widget.TextInputLayout
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp">

            <EditText
                android:id="@+id/edit_text_12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:focusable="true"
                android:layout_marginTop="11dp"
                android:hint="ID"
                android:maxLength="3"
                android:singleLine="true"
                android:textColor="#000000"></EditText>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/usernameTIL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="150dp">

            <EditText
                android:id="@+id/edit_text_11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:focusable="true"
                android:layout_marginTop="11dp"
                android:hint="Nama"
                android:maxLength="6"
                android:singleLine="true"
                android:textColor="#000000"></EditText>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/usernameTIL333"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="90dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="10dp"

                android:text="STATUS"
                android:textSize="15dp" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="10dp"

                android:editable="false"
                android:entries="@array/german_familienname"
                android:hint="ID USER"
                android:singleLine="true"
                android:spinnerMode="dialog">
            </Spinner>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/usernameTIL2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="230dp">

            <EditText
                android:id="@+id/edit_text_22"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignLeft="@+id/usernameTIL"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignStart="@+id/usernameTIL"
                android:layout_below="@+id/usernameTIL"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="40dp"
                android:maxLength="4"
                android:hint="Jumlah Barang Masuk"

                android:inputType="number"
                android:singleLine="true"
                android:textColor="#000000">

            </EditText>
        </android.support.design.widget.TextInputLayout>

<TextView
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:text="Tanggal"
    android:textSize="20dp"
    android:layout_marginLeft="25dp"
    android:layout_above="@+id/simpan_new_item"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:layout_marginBottom="20dp" />

            <EditText
                android:id="@+id/edit_text_33"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignLeft="@+id/usernameTIL2"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignStart="@+id/usernameTIL2"
                android:layout_below="@+id/usernameTIL2"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="60dp"
                android:inputType="number"
                android:singleLine="true"
                android:textColor="#000000" />



        <Button
            android:id="@+id/simpan_new_item"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:background="#F44336"
            android:text="Simpan"
            android:layout_below="@id/edit_text_33"
            android:textColor="#FFFFFF" />

    </RelativeLayout>

</LinearLayout>

